{
  "name": "letta-chrome-extension",
  "version": "1.0.0",
  "description": "Chrome extension for Letta AI with persistent memory",
  "scripts": {
    "build": "node scripts/build.js",
    "build:dev": "node scripts/build.js --dev",
    "watch": "node scripts/build.js --watch --dev",
    "clean": "node scripts/build.js --clean",
    "rebuild": "node scripts/build.js --clean && node scripts/build.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "test": "jest"
  },
  "dependencies": {
    "@letta-ai/letta-client": "^1.3.3",
    "minisearch": "^7.1.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "esbuild": "^0.19.11",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^30.2.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.4.6",
    "typescript": "^5.3.3"
  }
}
